<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="70dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="70dp"
    android:paddingEnd="20dp">



        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/t_ra_show"
            android:layout_width="450dp"
            android:layout_height="411dp" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="33dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="116dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/low_bg_top"
            android:layout_width="316dp"
            android:layout_height="142dp">

            <TextView
                android:id="@+id/ac_dc"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_383838"
                android:textSize="53sp"
                android:text="DC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp" />


            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<!--                <TextView-->
<!--                    android:layout_gravity="bottom"-->
<!--                    android:layout_marginLeft="100px"-->
<!--                    android:textColor="@color/color_383838"-->
<!--                    android:textSize="124px"-->
<!--                    android:text="0.0"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content" />-->


                <EditText
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="66dp"
                    android:id="@+id/et_unit_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:digits="0123456789."
                    android:gravity="center_vertical"
                    android:hint="0.0"
                    android:inputType="number"
                    android:maxLength="9"
                    android:singleLine="true"
                    android:textColor="@color/color_383838"
                    android:textColorHint="@color/color_383838"
                    android:textSize="53sp"
                    android:layout_marginStart="66dp" />

                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/color_383838"
                    android:textSize="53sp"
                    android:text="V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp" />

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>





    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_s"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/group_f"
            android:textSize="28sp"
            android:text="锁定电压"
            android:layout_width="156dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tv_o"
            android:layout_marginLeft="93dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:background="@drawable/btn_bg"
            android:textSize="28sp"
            android:text="确认输出"
            android:layout_width="156dp"
            android:layout_height="70dp"
            android:layout_marginStart="93dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/lw_alin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_ffffff"
                android:layout_gravity="center"
                android:text="A组"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/lw_a"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:src="@mipmap/off_iocn_ms"
                android:layout_width="162dp"
                android:layout_height="90dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lw_blin"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp">

            <TextView
                android:textColor="@color/color_ffffff"
                android:layout_gravity="center"
                android:text="B组"
                android:textSize="27sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/lw_b"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:src="@mipmap/off_iocn_ms"
                android:layout_width="162dp"
                android:layout_height="90dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="40dp"
            android:id="@+id/lw_clin"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/color_ffffff"
                    android:layout_gravity="center"
                    android:text="老师"
                    android:textSize="27sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/lw_c"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/off_iocn_ms"
                    android:layout_width="162dp"
                    android:layout_height="90dp"/>


            </LinearLayout>






        </LinearLayout>

    </LinearLayout>






    </LinearLayout>

            <LinearLayout
                android:layout_marginRight="33dp"
                android:layout_marginTop="116dp"
                android:layout_gravity="top|end"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="33dp">

                <TextView
                    android:id="@+id/tv_z"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:background="@drawable/group_t"
                    android:textSize="28sp"
                    android:text="直流"
                    android:layout_width="152dp"
                    android:layout_height="66dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_j"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:background="@drawable/group_f"
                    android:textSize="28sp"
                    android:text="交流"
                    android:layout_width="152dp"
                    android:layout_height="66dp" />

            </LinearLayout>

        </FrameLayout>



</LinearLayout>
