<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="46dp"
    android:background="@color/color_383838"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="46dp">
    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/t_ra_show"
        android:layout_width="300dp"
        android:layout_height="274dp" />


    <LinearLayout
        android:layout_marginLeft="133dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp">
        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@mipmap/gray_bgs"
            android:orientation="horizontal"
            android:layout_width="210dp"
            android:layout_height="95dp">


            <TextView
                android:layout_marginLeft="22dp"
                android:textColor="@color/color_383838"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:text="风速"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp" />

            <TextView
                android:id="@+id/tv_v"
                android:textColor="@color/color_383838"
                android:layout_marginLeft="31dp"
                android:layout_gravity="center"
                android:textSize="35sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp" />

            <TextView
                android:textColor="@color/color_383838"
                android:layout_gravity="center"
                android:textSize="35sp"
                android:text="Hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="64dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_f"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/btn_bg"
                android:textSize="19sp"
                android:text="额定风速"
                android:layout_width="101dp"
                android:layout_height="40dp" />



            <FrameLayout
                android:id="@+id/btn_add"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:layout_marginStart="23dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/new_bbb"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

            </FrameLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/btn_on_off"
                android:src="@mipmap/no_iocn_ms"
                android:layout_width="101dp"
                android:layout_height="40dp" />



            <FrameLayout
                android:id="@+id/btn_re"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:layout_marginStart="23dp">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/new_aaa"
                    android:layout_width="17dp"
                    android:layout_height="4dp" />

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
